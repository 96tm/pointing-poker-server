{
  "name": "pointing-poker-server",
  "version": "1.0.0",
  "description": "Server for pointing-poker app",
  "main": "index.js",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "postinstall": "npx tsc",
    "start": "node dist/server.js",
    "watch-node": "nodemon dist/index.js",
    "watch-ts": "npx tsc -w",
    "lint": "eslint --ext .ts --fix src",
    "dev": "nodemon -L --exitcrash -w 'src/**/*.ts' --exec ts-node src/server.ts",
    "test": "npx jest",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/96tm/pointing-poker-server.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/96tm/pointing-poker-server/issues"
  },
  "homepage": "https://github.com/96tm/pointing-poker-server#readme",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "cross-env": "7.0.3",
    "dotenv": "9.0.0",
    "express": "4.17.1",
    "http-status-codes": "^2.1.4",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "nodemon": "2.0.7",
    "reflect-metadata": "^0.1.10",
    "swagger-ui-express": "^4.1.6",
    "typescript": "^4.4.3",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-typescript": "^7.15.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.12",
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.4",
    "@types/multer": "^1.4.7",
    "@types/node": "^15.6.1",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "babel-jest": "^27.1.1",
    "debug": "4.3.1",
    "eslint": "7.2.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-config-airbnb-typescript": "^12.3.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "jest": "^27.1.1",
    "prettier": "2.2.1",
    "supertest": "^6.1.6",
    "ts-node": "^3.3.0"
  }
}
